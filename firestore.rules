rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user document
    function getUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserDoc().data.isAdmin == true;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Authenticated users can read all user documents (needed for leaderboard)
      // Users can read their own document
      allow read: if isAuthenticated();
      
      // Users can create their own document during registration
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Only admins can update user documents (for isAdmin flag, etc.)
      // Users can update their own basic info (but not isAdmin)
      allow update: if isAdmin() || 
                     (isOwner(userId) && 
                      !('isAdmin' in request.resource.data.diff(resource.data).affectedKeys()));
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Games collection (year-based)
    match /games/{year} {
      // Anyone authenticated can read game status
      allow read: if isAuthenticated();
      
      // Only admins can write to game documents
      allow write: if isAdmin();
      
      // Prop questions subcollection
      match /propQuestions/{questionId} {
        // Anyone authenticated can read questions
        allow read: if isAuthenticated();
        
        // Only admins can create, update, or delete questions
        allow write: if isAdmin();
      }
      
      // Prop entries subcollection (user submissions)
      match /propEntries/{entryId} {
        // Users can read all entries (for leaderboard)
        allow read: if isAuthenticated();
        
        // Users can create their own entries
        allow create: if isAuthenticated() && 
                        request.resource.data.user == /databases/$(database)/documents/users/$(request.auth.uid);
        
        // Users can only update their own entries (if needed)
        // Admins can update any entry (for scoring corrections)
        allow update: if isAdmin() || 
                       (isAuthenticated() && 
                        resource.data.user == /databases/$(database)/documents/users/$(request.auth.uid));
        
        // Only admins can delete entries
        allow delete: if isAdmin();
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
